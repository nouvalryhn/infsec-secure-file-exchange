# VPS Environment Configuration (1GB RAM, 2 Core)
# Copy this file to .env.production.local and update with your VPS values

# Database - Optimized for low memory
DATABASE_URL="mysql://secure_user:secure_password@localhost:3306/secure_file_exchange?connection_limit=5&pool_timeout=30"

# Session Secret - Generate a strong 32+ character secret
SESSION_SECRET="your-production-session-secret-min-32-characters-long"

# File Upload Configuration - Reduced for VPS
MAX_FILE_SIZE=5242880
UPLOAD_DIR="/var/app/uploads"

# Encryption - Use a strong 32-character key
ENCRYPTION_KEY="your-production-encryption-key-32-chars"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="http://your-vps-ip:3000"

# Security Configuration
SECURE_COOKIES=false
COOKIE_DOMAIN="your-vps-ip"

# Logging Configuration - Minimal for VPS
LOG_LEVEL="error"
ENABLE_QUERY_LOGGING=false

# Performance Configuration - Optimized for 1GB RAM
DATABASE_CONNECTION_LIMIT=5
DATABASE_POOL_TIMEOUT=30000

# Memory optimization
NODE_OPTIONS="--max-old-space-size=256"