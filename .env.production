# Production Environment Configuration
# Copy this file to .env.production.local and update with your production values

# Database - Use connection pooling URL for production
DATABASE_URL="mysql://user:password@localhost:3306/secure_file_exchange?connection_limit=10&pool_timeout=20"

# Session Secret - Generate a strong 32+ character secret
SESSION_SECRET="your-production-session-secret-min-32-characters-long"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/var/app/uploads"

# Encryption - Use a strong 32-character key
ENCRYPTION_KEY="your-production-encryption-key-32-chars"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Security Configuration
SECURE_COOKIES=true
COOKIE_DOMAIN="your-domain.com"

# Logging Configuration
LOG_LEVEL="error"
ENABLE_QUERY_LOGGING=false

# Performance Configuration
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20000